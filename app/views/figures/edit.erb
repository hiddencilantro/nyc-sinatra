<h1>Edit Historical Figure</h1>

<form action="/figures/<%= @figure.id %>" method="post">
  <input type="hidden" name="_method" value="patch">

  Name:
  <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>">
  <br/><br/>


  <h3>Landmarks:</h3>

  <% Landmark.all.each do |landmark| %>
    <%= landmark.name %> (<%= landmark.year_completed %>)
    <input type="checkbox" name="figure[landmark_ids][]" id="<%= landmark.name %>" value="<%= landmark.id %>" <%= "checked" if @figure.landmarks.include?(landmark) %>>
    <br/>
  <% end %>

  <h4>Add New Landmark:</h4>
  Name:
  <input type="text" name="landmark[name]" id="new_landmark">
  <br/>
  Year Completed:
  <input type="text" name="landmark[year_completed]">
  <br/><br/>


  <h3>Titles:</h3>

  <% Title.all.each do |title| %>
    <%= title.name %>
    <input type="checkbox" name="figure[title_ids][]" id="<%= title.name %>" value="<%= title.id %>" <%= "checked" if @figure.titles.include?(title) %>>
    <br/>
  <% end %>

  <h4>Add New Title:</h4>
  <input type="text" name="title[name]" id="new_title">
  <br/><br/>


  <input type="submit" value="Edit Figure">

</form>

<a class="button" href="/figures">Figures</a>
<a class="button" href="/">Home</a>
