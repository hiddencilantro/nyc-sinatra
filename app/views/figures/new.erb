<h2>Create New Figure</h2>

<form action="/figures" method="post">
    <h2>Name: <input type="text" name="figure[name]" id="figure_name"></h2>
    <h3>Titles</h3>
    <% Title.all.each do |title| %>
        <%= title.name %>
        <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>">
    <% end %>
    <br/>
    
    <h3>Create New Title:</h3>
    Name:
    <input type="text" name="title[name]" id="new_title">
    <br/><br/>

    <h3>Landmarks</h3>
    <% Landmark.all.each do |landmark| %>
        <%= landmark.name %>
        <input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>">
    <% end %>
    <br/>

    <h3>Create New Landmark:</h3>
    Name:
    <input type="text" name="landmark[name]" id="new_landmark">
    Year:
    <input type="text" name="landmark[year_completed]" id="landmark_year">
    <br/><br/>

    <input type="submit" value="Create New Figure">
</form>

<a class="button" href="/figures">Figures</a>
<a class="button" href="/">Home</a>
